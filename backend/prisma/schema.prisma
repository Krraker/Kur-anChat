generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QuranVerse {
  id        Int      @id @default(autoincrement())
  surah     Int      // Surah number (1-114)
  surah_name String?  // Surah name in Turkish
  ayah      Int      // Ayah number within surah
  text_ar   String   @db.Text // Arabic text
  text_tr   String   @db.Text // Turkish translation
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([surah, ayah])
  @@index([surah])
  @@map("quran_verses")
}

model Conversation {
  id        String    @id @default(uuid())
  userId    String    @map("user_id") // User identifier (can be session-based or auth-based)
  title     String?   // Auto-generated or user-defined title
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  messages  Message[]

  @@index([userId])
  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String       @map("conversation_id")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         String       // 'user' or 'assistant'
  content        Json         // JSONB field containing message data (text, verses, summary, etc.)
  createdAt      DateTime     @default(now()) @map("created_at")

  @@index([conversationId])
  @@index([createdAt])
  @@map("messages")
}


