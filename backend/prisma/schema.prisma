// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QuranVerse {
  id        Int      @id @default(autoincrement())
  surah     Int      // Surah number (1-114)
  surah_name String?  // Surah name in Turkish
  ayah      Int      // Ayah number within surah
  text_ar   String   @db.Text // Arabic text
  text_tr   String   @db.Text // Turkish translation
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tafsirs   Tafsir[]

  @@unique([surah, ayah])
  @@index([surah])
  @@map("quran_verses")
}

model Tafsir {
  id        Int      @id @default(autoincrement())
  surah     Int
  ayah      Int
  source    String   // "Ibn Kesir", "Diyanet", "Taberi" etc.
  text      String   @db.Text
  verse     QuranVerse? @relation(fields: [surah, ayah], references: [surah, ayah])
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([surah, ayah, source])
  @@index([surah, ayah])
  @@map("tafsirs")
}

model User {
  id              String   @id @default(uuid())
  deviceId        String?  @unique @map("device_id")
  email           String?  @unique
  name            String?
  language        String   @default("tr")
  selectedMezhep  String?  @map("selected_mezhep")
  translation     String   @default("diyanet")
  
  // Chat usage limits (FREE TIER: 3 messages/day)
  dailyMessageCount    Int      @default(0) @map("daily_message_count")
  dailyMessageResetAt  DateTime @default(now()) @map("daily_message_reset_at")
  isPremium            Boolean  @default(false) @map("is_premium")
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  progress        UserProgress?

  @@map("users")
}

model UserProgress {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  lastReadSurah   Int      @default(1) @map("last_read_surah")
  lastReadAyah    Int      @default(1) @map("last_read_ayah")
  completedSurahs Int[]    @default([]) @map("completed_surahs")
  
  level           Int      @default(1)
  xp              Int      @default(0)
  streak          Int      @default(0)
  lastActiveDate  DateTime @default(now()) @map("last_active_date")
  
  totalVersesRead Int      @default(0) @map("total_verses_read")
  totalTimeSpent  Int      @default(0) @map("total_time_spent") // in minutes
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("user_progress")
}

model Conversation {
  id        String    @id @default(uuid())
  userId    String    @map("user_id") // User identifier (can be anonymous)
  title     String?   // Auto-generated or user-defined title
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  messages  Message[]

  @@index([userId])
  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String       @map("conversation_id")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         String       // 'user' or 'assistant'
  content        Json         // JSONB field containing message data (text, verses, summary, etc.)
  createdAt      DateTime     @default(now()) @map("created_at")

  @@index([conversationId])
  @@index([createdAt])
  @@map("messages")
}


